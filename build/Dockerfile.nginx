FROM nginx:alpine

# Remove default nginx configuration
RUN rm /etc/nginx/conf.d/default.conf

# Copy custom nginx configuration
COPY build/nginx.conf /etc/nginx/conf.d/moneybook.conf

# Copy static files
COPY moneybook/static /usr/share/nginx/html/static

# Expose port 80
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
